<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350px"
    android:background="#FFEEEEEE"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="252px"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_weixin"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="89px"
                android:layout_height="89px"
                android:src="@drawable/icon_weixin"
                />
            <TextView
                android:layout_marginTop="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:text="微信"
                android:textColor="#666"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_pengyouquan"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="89px"
                android:layout_height="89px"
                android:src="@drawable/icon_pengyouquan"
                />
            <TextView
                android:layout_marginTop="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:text="朋友圈"
                android:textColor="#666"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_qq"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="89px"
                android:layout_height="89px"
                android:src="@drawable/iocn_qq"
                />
            <TextView
                android:layout_marginTop="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:text="QQ"
                android:textColor="#666"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_sina"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="89px"
                android:layout_height="89px"
                android:src="@drawable/icon_sina"
                />
            <TextView
                android:layout_marginTop="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:text="新浪微博"
                android:textColor="#666"
                />
        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:text="取消"
        android:gravity="center"
        android:textColor="#999"
        />
</RelativeLayout>